{% macro title(text) %}
  <div class="row">
    <div class="col w-10/12 ml-1/12 mr-1/12">
      <h1 class="title">
        {{ text }}
      </h1>
    </div>
  </div>
{% endmacro %}

{% macro heading(text, color) %}
  <div class="row">
    <div class="col w-6/12 ml-5/12 mr-1/12">
      <h2 class="heading text-{{ color }}">
        {{ text }}
      </h2>
    </div>
  </div>
{% endmacro %}

{% macro subtitle(text) %}
  <div class="row">
    <div class="col w-6/12 ml-5/12 mr-1/12">
      <h3 class="subtitle">
        {{ text }}
      </h3>
    </div>
  </div>
{% endmacro %}

{% macro intro(text, color) %}
  <div class="row">
    <div class="col w-8/12 ml-3/12 mr-1/12">
      <p class="intro text-{{ color }}">
        {{ text }}
      </p>
    </div>
  </div>
{% endmacro %}

