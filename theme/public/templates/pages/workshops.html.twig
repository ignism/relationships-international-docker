{# Sample page #}

{% extends "core/base.html.twig" %}

{% set main_class = ['header-offset'] %}
{% set breadcrumps = [
  { breadcrump: 'Couples' },
  { breadcrump: 'Couples Workshops' }
] %}

{% block main %}

  {% set banner_index = 1 %}

  <section class="pt-12">
    <div class="container">
      <div class="row">
        <div class="col md:w-6/12 md:ml-1/12">
          <h1>Couples<br>Workshops</h1>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="row flex-wrap">

        {% for post in posts %}
          {% if locale == post.id|get_post_lang %}

            <div class="col md:w-10/12 md:ml-1/12 lg:w-6/12 lg:ml-5/12">
              <article class="index-{{ loop.index }}">
                <h2 class="text-blue font-medium">
                  {{ post.title }}
                </h2>
                <h3 class="font-normal">
                  Workshop
                </h3>
                <p class="mt-8 mb-4">
                  {{ post.meta('summary') }}
                </p>
                <p class="text-blue text-right">
                  <a class="underline" href="{{ post.link }}">Read more</a>
                </p>
              </article>
            </div>

          {% endif %}

        {% endfor %}

      </div>
    </div>
  </section>

  {% include "components/cta-footer.html.twig" with {
    text: post.meta('page_footer')
  } %}

{% endblock %}