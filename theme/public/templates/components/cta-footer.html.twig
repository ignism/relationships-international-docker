{% if banner_index is not defined %}
  {% set banner_index = 1 %}
{% endif %}

<section class="pt-12">
  <div class="separator w-full" style="background-image: url({{ theme.link }}/images/banner_{{ banner_index }}.jpg)">
    <div class="container h-full flex flex-col justify-center text-white text-2xl">
      <div class="row">
        <div class="col md:10/12 lg:w-8/12 md:ml-1/12">
        {% if text %}
          <p class="text-xl md:text-3xl lg:text-4xl text-white font-display font-bold leading-tight">{{ text }}</p>
        {% else %}
          <p class="text-xl md:text-3xl lg:text-4xl text-white font-display font-bold leading-tight">Contact us today<br>to get started.</p>
        {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>